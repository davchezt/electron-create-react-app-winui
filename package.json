{
  "name": "harmony",
  "description": "CRA + Electron starter",
  "version": "0.1.0",
  "author": "Raiza Rhamdan",
  "private": true,
  "dependencies": {
    "@craco/craco": "^3.2.3",
    "cross-env": "^5.2.0",
    "electron-is-dev": "^1.0.1",
    "electron-node-notifier": "https://github.com/davchezt/electron-node-notifier.git",
    "react": "^16.7.0",
    "react-desktop": "^0.3.7",
    "react-dom": "^16.7.0",
    "react-icons": "^3.2.2",
    "react-scripts": "2.1.1",
    "update-electron-app": "^1.3.0"
  },
  "scripts": {
    "react-start": "craco start",
    "react-build": "craco build",
    "react-test": "craco test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "wait-on": "^3.2.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/davchezt/electron-create-react-app-winui.git"
  },
  "build": {
    "appId": "com.militant.harmony",
    "protocols": {
      "name": "electron-deep-linking",
      "schemes": [
        "harmony"
      ]
    },
    "mac": {
      "category": "public.app-category.Reference"
    },
    "win": {},
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/electron-node-notifier/vendor/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron-node-notifier/vendor",
        "to": "app.asar.unpacked/node_modules/electron-node-notifier/vendor"
      },
      {
        "from": "public/assets/img",
        "to": "app.asar.unpacked/assets/img"
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
